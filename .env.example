# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
# Generate a secret key: python -c "import secrets; print(secrets.token_hex(32))"

# Database Configuration
# For local development: sqlite:///signup.db
# For Heroku: DATABASE_URL is automatically provided by heroku-postgresql addon
DATABASE_URL=postgresql://localhost/kc_fifa_signup

# Redis Configuration (Caching and Message Broker)
# For Heroku: REDIS_URL is automatically provided by heroku-redis addon
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=redis

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_FROM_NUMBER=+15551234567

# Rate Limiting Configuration
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
REQUESTS_PER_MINUTE=10
REQUESTS_PER_HOUR=100

# Celery Configuration (for async SMS processing)
# For Heroku: These default to REDIS_URL if not set
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Performance Configuration
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Monitoring Configuration
LOG_LEVEL=INFO
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# Form Configuration (can be overridden via database)
FORM_TITLE="Kansas City FIFA Fan Fest Signup"
DEFAULT_EVENTS="World Cup Viewing,Skills Challenge,Photo Booth,Food Trucks,Live Music"

# Production Settings
FORCE_HTTPS=false
SENTRY_DSN=""
CDN_URL=""
